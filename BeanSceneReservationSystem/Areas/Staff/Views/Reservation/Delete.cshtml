@model Reservation

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <h4>Reservation Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name:</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name:</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number:</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Guest Number:</dt>
        <dd class="col-sm-10">@Model.GuestNumber</dd>

        <dt class="col-sm-2">Start Time:</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>

        <dt class="col-sm-2">End Time:</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>

        <dt class="col-sm-2">Duration:</dt>
        <dd class="col-sm-10">@Model.Duration</dd>

        <dt class="col-sm-2">Note:</dt>
        <dd class="col-sm-10">@Model.Note</dd>
    </dl>

    <div class="alert alert-danger">
        Are you sure you want to delete this reservation?
    </div>

    <form asp-action="Delete" asp-controller="Reservation" method="post" asp-area="Staff">
        <input type="hidden" name="id" value="@Model.Id" />
        <a asp-action="Index" asp-controller="Reservation" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-danger">Delete</button>
       
    </form>
</div>