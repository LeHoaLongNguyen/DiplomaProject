@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid">
    <div class="row justify-content-center align-items-center">
        <h1 class="title">Management</h1>
    </div>

    <div class="row justify-content-center align-items-center">
        <img src="~/Images/An-Introduction-to-People-Management.png" />
    </div>

</div>


<div class="container-fluid-buttons">
    <!-- Create a sitting button -->
    <div class="row justify-content-center">
        <div class="col-sm">
            <p>Schedule Sitting</p>
            <a asp-action="Create" asp-controller="Sitting" asp-area="Management" class="calendarButton">
                <i class="bi bi-plus-circle icon"></i>
            </a>
        </div>
        <div class="col-sm">
            <p>Manage Sittings</p>
            <a asp-action="Index" asp-controller="Sitting" asp-area="Management" class="calendarButton">
                <i class="bi bi-list icon"></i>
            </a>
        </div>
        <div class="col-sm">
            <p>View Users</p>
            <a asp-action="Index" asp-controller="User" asp-area="Management" class="calendarButton">
                <i class="bi bi-person-circle icon"></i>
            </a>
        </div>
        <div class="col-sm">
            <p>View Calendar</p>
            <a asp-area="Management" asp-controller="Calender" asp-action="Index" class="calendarButton">
                <i class="bi bi-calendar icon"></i>
            </a>
        </div>
        <div class="col-sm">
            <p>View Reports</p>
            <a asp-area="Management" asp-controller="Report" asp-action="Index" class="calendarButton">
                <i class="bi bi-bar-chart icon"></i>
            </a>
        </div>
    </div>
</div>

<style>
    .container-fluid {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      
        margin-bottom: 20px; /* Added margin-bottom */
    }

    .container-fluid-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .title {
        text-align: center;
        margin-bottom: 20px;
    }

    /* CSS styling for the buttons */
    .icon {
        font-size: 40px;
    }

    .calendarButton {
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        background-color: grey;
        padding: 25px 75px;
    }

    .col-sm {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
